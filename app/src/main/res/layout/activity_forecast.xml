<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:layout_marginRight="1dp"
            card_view:cardBackgroundColor="@color/cardview_initial_background"
            >

            <TextView
            android:id="@+id/textViewTerminalLabel"
            android:background="@color/colorPrimary"
            android:text="Christiaan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            android:textSize="30sp"/>

            <TextView
                android:id="@+id/textViewTerminalLabela"
                android:background="@color/cardview_initial_background"
                android:text="Today"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="65dp"
                android:textSize="25sp"
                android:textStyle="bold|italic"/>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="115dp"
                >
                <TextView
                    android:id="@+id/christiaan_today_sessions"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"/>
            </ScrollView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            card_view:cardBackgroundColor="@color/cardview_initial_background"
            >


            <TextView
                android:id="@+id/textViewTerminalLabel2"
                android:background="@color/colorPrimary"
                android:text="Sarah"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:layout_margin="5dp"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/today_date"
                android:background="@color/cardview_initial_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="65dp"
                android:textSize="25sp"
                android:textStyle="bold|italic"/>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="115dp"
                >
                <TextView
                    android:id="@+id/sarah_today_sessions"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"/>
            </ScrollView>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            card_view:cardBackgroundColor="@color/cardview_initial_background"
            >

            <TextView
                android:id="@+id/textViewTerminalLabel3"
                android:background="@color/cardview_initial_background"
                android:text="Tomorrow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="5dp"
                android:textSize="25sp"
                android:textStyle="bold|italic"/>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="50dp"
                >
                <TextView
                    android:id="@+id/christiaan_tomorrow_sessions"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:background="@android:color/white"
                    android:textColor="@android:color/black"/>
            </ScrollView>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:layout_marginRight="1dp"
            card_view:cardBackgroundColor="@color/cardview_initial_background"
            >

            <TextView
                android:id="@+id/tomorrow_date"
                android:background="@color/cardview_initial_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:layout_margin="0dp"
                android:textSize="25sp"
                android:textStyle="bold|italic"/>

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="50dp"
                >

                <TextView
                    android:id="@+id/sarah_tomorrow_sessions"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:textColor="@android:color/black"/>
            </ScrollView>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>
